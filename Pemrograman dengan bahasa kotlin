Membuat dan menggunakan fungsi kotlin
fun main() {
    println("Happy Birthday, Nanda!")
    println("You are now 20 years old!")
}
***
fun main() {
    birthdayGreeting()
}
fun birthdayGreeting() {
    println("Happy Birthday, Nanda!")
    println("You are now 20 years old!")
}
***
fun main() {
    birthdayGreeting()
}

fun birthdayGreeting(): Unit {
    println("Happy Birthday, Nanda!")
    println("You are now 20 years old!")
}
***
fun main() {
    val greeting = birthdayGreeting()
    println(greeting)
}
fun birthdayGreeting(): String {
    val nameGreeting = "Happy Birthday, Nanda!"
    val ageGreeting = "You are now 20 years old!"
    return "$nameGreeting\n$ageGreeting"
}
***
fun main() {
    println(birthdayGreeting())
}
fun birthdayGreeting(): String {
    val nameGreeting = "Happy Birthday, Nanda!"
    val ageGreeting = "You are now 20 years old!"
    return "$nameGreeting\n$ageGreeting"
}
***
fun birthdayGreeting(name: String): String {
    val nameGreeting = "Happy Birthday, $name!"
    val ageGreeting = "You are now 20 years old!"
    return "$nameGreeting\n$ageGreeting"
}
fun main() {
    println(birthdayGreeting("Nanda"))
}
***
fun birthdayGreeting(name: String): String {
    val nameGreeting = "Happy Birthday, $name!"
    val ageGreeting = "You are now 20 years old!"
    return "$nameGreeting\n$ageGreeting"
}
fun main() {
    println(birthdayGreeting("Nanda"))
    println(birthdayGreeting("The Rock"))
	println(birthdayGreeting("Jon Sena"))
}
***
fun birthdayGreeting(name: String, age: Int): String {
    val nameGreeting = "Happy Birthday, $name!"
    val ageGreeting = "You are now $age years old!"
    return "$nameGreeting\n$ageGreeting"
}
fun main() {
    println(birthdayGreeting("Nanda", 20))
    println(birthdayGreeting("Jojon", 26))
}
***
